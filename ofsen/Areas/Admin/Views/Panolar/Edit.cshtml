@model ofsen.Models.Pano

@{
    ViewData["Title"] = "Edit";
    
}

<h1>Edit</h1>
<h4>Pano</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="anatab" class="control-label"></label>
                <select asp-for="anatab" class="form-control"  asp-items="@Html.GetEnumSelectList<Anatab>()"></select>
                <span asp-validation-for="anatab" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="title" class="control-label"></label>
                <input asp-for="title" class="form-control" />
                <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="thumb" class="control-label"></label>
                <input asp-for="thumb" class="form-control" accept="image/*" />
                <span asp-validation-for="thumb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="metin" class="control-label"></label>
                <textarea asp-for="metin" class="form-control" style="transition:.4s"></textarea>
                <span asp-validation-for="metin" class="text-danger"></span>
            </div>
            <div class="form-group form-check-inline">
                <label class="form-check-label">
                    @Html.DisplayNameFor(model => model.aktif) <input class="form-check-input" asp-for="aktif" />
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    $("#metin").autosize();
</script>